<Window x:Class="A1_StopWatch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:A1_StopWatch"
        mc:Ignorable="d"
        Title="StopWatch" Height="300" Width="600" ResizeMode="CanMinimize">
    <Grid>
        <Button x:Name="StartButton" Content="Почати" HorizontalAlignment="Left" Margin="55,0,0,28" VerticalAlignment="Bottom" Width="190" FontSize="48" Click="StartButton_Click"/>
        <Button x:Name="ClearButton" Content="Знову" HorizontalAlignment="Right" Margin="0,0,55,28" VerticalAlignment="Bottom" Width="190" FontSize="48" Click="ClearButton_Click" RenderTransformOrigin="0.184,0.493"/>
        <Label x:Name="StopWatchDisplay" Content="0:00:00,00" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="80" FontWeight="Bold" Margin="96,38,101,0"/>
    </Grid>
</Window>